#!/bin/bash -e

source "${OPENSHIFT_RUBY_DIR}/lib/servers"

function start() {
  run_command 'unicorn -c ${OPENSHIFT_RUBY_DIR}/servers/unicorn/config.rb -D -E "production"'
}

function stop() {
  kill -QUIT `cat ${OPENSHIFT_RUBY_DIR}run/server.pid`
}

function restart() {
  stop
  start
}

case "$1" in
  start)     start ;;
  stop)      stop ;;
  restart)   restart ;;
  *)         exit 0 ;;
esac